{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aapName": {
            "defaultValue": "[format('aap{0}', uniqueString(utcNow(), resourceGroup().id))]",
            "type": "string"
        },
        "access": {
            "defaultValue": "",
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "",
            "type": "securestring"
        },
        "crossTenantRoleAssignment": {
            "defaultValue": true,
            "metadata": {
                "description": "Enable cross tenant support for role assignments"
            },
            "type": "bool"
        },
        "dnsServiceIP": {
            "type": "string"
        },
        "installerAutoRetrySteps": {
            "defaultValue": false,
            "type": "bool"
        },
        "location": {
            "defaultValue": "",
            "metadata": {
                "description": "Location for resource deployment"
            },
            "type": "string"
        },
        "operatorsChannel": {
            "defaultValue": "stable-2.3-cluster-scoped",
            "type": "string"
        },
        "operatorsIndex": {
            "defaultValue": "registry.redhat.io/redhat/redhat-operator-index:v4.11",
            "type": "string"
        },
        "podCidr": {
            "type": "string"
        },
        "serviceCidr": {
            "type": "string"
        },
        "vmSize": {
            "defaultValue": "Standard_D4s_v3",
            "type": "string"
        },
        "vnetConfig": {
            "defaultValue": {},
            "type": "object"
        },
        "applicationResourceName": {
            "type": "string",
            "defaultValue": "e4d8869dc96044c3a8f2da5a8a36d941"
        },
        "managedResourceGroupId": {
            "type": "string",
            "defaultValue": ""
        },
        "managedIdentity": {
            "type": "object",
            "defaultValue": {}
        }
    },
    "variables": {
        "managedResourceGroupId": "[if(empty(parameters('managedResourceGroupId')),concat(subscription().id,'/resourceGroups/',take(concat(resourceGroup().name,'-',uniquestring(resourceGroup().id),uniquestring(parameters('applicationResourceName'))),90)),parameters('managedResourceGroupId'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Solutions/applications",
            "apiVersion": "2017-09-01",
            "location": "[resourceGroup().Location]",
            "kind": "MarketPlace",
            "name": "[parameters('applicationResourceName')]",
            "plan": {
                "name": "rh-aap-azure0int-z1",
                "product": "rhaapomsa",
                "publisher": "redhat",
                "version": "1.0.25"
            },
            "identity": "[if(empty(parameters('managedIdentity')),json('null'),parameters('managedIdentity'))]",
            "properties": {
                "managedResourceGroupId": "[variables('managedResourceGroupId')]",
                "parameters": {
                    "aapName": {
                        "value": "[parameters('aapName')]"
                    },
                    "access": {
                        "value": "[parameters('access')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "crossTenantRoleAssignment": {
                        "value": "[parameters('crossTenantRoleAssignment')]"
                    },
                    "dnsServiceIP": {
                        "value": "[parameters('dnsServiceIP')]"
                    },
                    "installerAutoRetrySteps": {
                        "value": "[parameters('installerAutoRetrySteps')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "operatorsChannel": {
                        "value": "[parameters('operatorsChannel')]"
                    },
                    "operatorsIndex": {
                        "value": "[parameters('operatorsIndex')]"
                    },
                    "podCidr": {
                        "value": "[parameters('podCidr')]"
                    },
                    "serviceCidr": {
                        "value": "[parameters('serviceCidr')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vnetConfig": {
                        "value": "[parameters('vnetConfig')]"
                    }
                },
                "jitAccessPolicy": null
            }
        }
    ]
}
